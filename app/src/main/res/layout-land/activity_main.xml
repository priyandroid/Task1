<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="30dp"
        >


        <ImageView
            android:id="@+id/image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_stars" />

        <TextView
            android:id="@+id/text_score"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="177dp"
            android:layout_toRightOf="@+id/image"
            android:text="SCORE"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/score"
            android:layout_toRightOf="@+id/text_score"
            android:layout_alignTop="@+id/text_score"
            android:layout_marginLeft="40dp"
            android:textSize="20sp"
            />


        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_marginTop="25dp"
            android:text="ENTER THE NUMBER"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enter_button"
            android:layout_marginTop="28dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/text_opt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="20sp"


                />

            <Button
                android:id="@+id/text_opt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="20sp"/>

            <Button
                android:id="@+id/text_opt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="20sp"/>


        </LinearLayout>

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_below="@id/text_view"

            android:gravity="center"
            android:visibility="visible" />

        <Button
            android:id="@+id/enter_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_text"
            android:layout_marginTop="23dp"
            android:layout_centerHorizontal="true"
            android:text="ENTER" />

    </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>